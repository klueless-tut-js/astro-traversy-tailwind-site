---
import Navbar from '../components/Navbar.astro';

export interface Props {
  title?: string
}

const { title = 'Tailwind Site' } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
</head>
<body>
  <main>
    <Navbar />
    <h1 class='font-bold text-3xl'>Astro Site</h1>
    <slot />
  </main>  
</body>
</html>